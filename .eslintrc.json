{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "strict": ["error", "global"],
    "no-console": "off",
    "import/no-extraneous-dependencies": "off",
    "global-require": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  }
}
